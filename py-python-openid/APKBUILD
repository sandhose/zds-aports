pkgname=py-python-openid
_pkgname=python-openid
pkgver=2.2.5
pkgrel=0
pkgdesc="OpenID support for servers and consumers."
url="https://pypi.python.org/pypi/$_pkgname-$pkgver"
arch="noarch"
license="UNKNOWN"
depends="python"
makedepends="python-dev"
builddir="$srcdir/$_pkgname-$pkgver"
source="https://files.pythonhosted.org/packages/source/${pkgname:3:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"

build() {
	cd "$builddir"
	python2 setup.py build || return 1
}

package() {
	cd "$builddir"
	python2 setup.py install --prefix=/usr --root="$pkgdir"
}

