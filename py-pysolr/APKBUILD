pkgname=py-pysolr
pkgver=3.6.0
pkgrel=0
pkgdesc="Lightweight python wrapper for Apache Solr."
url="https://pypi.python.org/pypi/pysolr"
arch="noarch"
license="BSD"
depends="python"
makedepends="$depends_dev"
source="pysolr-3.6.0.tar.gz::https://pypi.python.org/packages/47/d6/91dd269b4443c77905ac5f347318435bfeaa2825ce2763d936e0945f29e4/pysolr-3.6.0.tar.gz"
builddir="$srcdir/pysolr-3.6.0"

build() {
    cd "$builddir"
    python setup.py build || return 1
}

package() {
    cd "$builddir"
    python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

